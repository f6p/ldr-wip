- title 'Sign Up'

= devise_form(registration_path resource_name) do |f|
  = devise_error_messages!

  %fieldset
    = f.label       :email
    = f.email_field :email

    = f.label          :password
    = f.password_field :password

    = f.label          :password_confirmation
    = f.password_field :password_confirmation

  %fieldset
    = f.submit 'Sign Up'

= render 'devise/shared/links'
